---
interface Props {
  title: string;
  description: string;
  image: string;
  path: string;
}

const { title, description, image, path } = Astro.props;
---

<section class="h-max w-max">
  <a href={`/news${path}`}>
    <div class="xl:flex gap-5">
      <div class="flex flex-col gap-4">
        <div class="flex flex-wrap flex-col gap-2">
          <h2 class="text-xl font-bold uppercase">
            {title}
          </h2>
          <p class="text-neutral-300 flex-wrap">
            {description}
          </p>
        </div>
      </div>
      <img class="rounded-md xl:w-[300px] mt-2 xl:mt-0" src={image} />
    </div>
  </a>
</section>
